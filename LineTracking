
#pragma config(Sensor, S1,     color,          sensorEV3_Color)
#pragma config(Motor,  motorA,          leftWheel,     tmotorEV3_Large, PIDControl, reversed, encoder)
#pragma config(Motor,  motorB,          rightWheel,    tmotorEV3_Large, PIDControl, reversed, encoder)
//*!!Code automatically generated by 'ROBOTC' configuration wizard               !!*//

short motorSpeedA = 20;
short motorSpeedB = 20;
short initLightVal = 0;
resetMotorEncoder(leftWheel);
resetMotorEncoder(rightWheel);

while(getMotorEncoder(leftWheel) < 900) {
    setMotorSpeed(leftWheel, motorSpeedA);
    setMotorSpeed(rightWheel, motorSpeedB);
    
    wait1Msec(100);
    
    initLightVal = (getColorReflected(color) - 18);     //find correct value for gradient between black and white desired here
    
    if(initLightVal > 0){
        motorSpeedA--;
        motorSpeedB++;
    }
    if(initLightVal < 0){
        motorSpeedA++;
        motorSpeedB--;
    }
    if(initLightVal == 0){
        motorSpeedA = 20
        motorSpeedB = 20
    }
}
